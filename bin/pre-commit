#!/usr/bin/env bash

set -e

STAGED_RUBY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(rb|rake)$' || true)

if [ -z "$STAGED_RUBY_FILES" ]; then
  exit 0
fi

echo "Running RuboCop on staged Ruby files..."

# Run rubocop with auto-correct on staged files
if ! bin/rubocop -a $STAGED_RUBY_FILES; then
  echo ""
  echo "RuboCop found issues that could not be auto-corrected."
  echo "Please fix the remaining issues and try again."
  exit 1
fi

# Re-stage any files that were auto-corrected
for file in $STAGED_RUBY_FILES; do
  if [ -f "$file" ]; then
    git add "$file"
  fi
done

echo "RuboCop passed!"

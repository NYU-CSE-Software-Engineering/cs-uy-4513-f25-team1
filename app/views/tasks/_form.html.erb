<%= form_with model: [@project, task], local: true, class: "task-form" do |form| %>
  <% if task.errors.any? %>
    <div class="error-explanation mb-4 p-3" style="background-color: #fee2e2; color: var(--danger-color); border-radius: var(--radius-md);">
      <h2 style="font-size: 16px; margin-bottom: 8px;"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul style="padding-left: 20px; margin: 0;">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, options_for_select([
      ["To Do", "todo"],
      ["In Progress", "in_progress"],
      ["Done", "done"]
    ], task.status), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :priority, class: "form-label" %>
    <%= form.select :priority, options_for_select(Task.priorities.keys.map { |k| [k.humanize, k] }, task.priority), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :github_branch, "GitHub Branch", class: "form-label" %>
    <%= form.text_field :github_branch, class: "form-control" %>
  </div>

  <div class="form-actions mt-4">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

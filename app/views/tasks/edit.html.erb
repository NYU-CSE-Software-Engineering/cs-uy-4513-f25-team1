<h1>Edit Task</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<% if @task.completed_at.present? %>
  <div class="alert">This task was completed on <%= @task.completed_at.strftime("%B %d, %Y at %I:%M %p") %> and cannot be modified.</div>
  <p><%= link_to "Back to Task", project_task_path(@project, @task), class: "btn btn-secondary" %></p>
<% else %>

<%= form_with model: [@project, @task], local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 4, required: true %>
  </div>

  <div>
    <%= form.label :type, "Type" %>
    <%= form.select :type, options_for_select([
      ["Feature", "Feature"],
      ["Bug", "Bug"],
      ["Backlog", "Backlog"]
    ], @task.type) %>
  </div>

  <div>
    <%= form.label :status, "Task Status" %>
    <%= form.select :status, options_for_select([
      ["To Do", "todo"],
      ["In Progress", "in_progress"],
      ["In Review", "in_review"],
      ["Completed", "completed"]
    ], @task.status) %>
  </div>

  <div>
    <%= form.label :branch_link, "Branch Link (optional)" %>
    <%= form.url_field :branch_link, placeholder: "https://github.com/org/repo/tree/branch-name" %>
  </div>

  <div>
    <%= form.label :assignee_id, "Assignee (optional)" %>
    <%= form.select :assignee_id,
      options_from_collection_for_select(@collaborators, :id, ->(c) { c.user.username }, @task.assignee_id),
      { include_blank: "Unassigned" } %>
  </div>

  <div>
    <%= form.label :priority, "Priority (optional)" %>
    <%= form.select :priority, options_for_select([
      ["No Priority", "no_priority"],
      ["Low", "low"],
      ["Medium", "medium"],
      ["High", "high"],
      ["Urgent", "urgent"]
    ], @task.priority), { include_blank: "Select Priority" } %>
  </div>

  <div>
    <%= form.label :due_at, "Due Date (optional)" %>
    <%= form.datetime_local_field :due_at %>
  </div>

  <div class="form-actions">
    <%= form.submit "Update Task", class: "btn btn-primary" %>
    <%= link_to "Cancel", project_task_path(@project, @task), class: "btn btn-secondary" %>
  </div>
<% end %>

<hr>

<h2>Media Files</h2>

<% if @task.media_files.attached? %>
  <div class="media-gallery">
    <% @task.media_files.each do |file| %>
      <div class="media-item">
        <% if file.image? %>
          <div class="media-preview">
            <%= image_tag file, class: "media-thumbnail" %>
          </div>
        <% else %>
          <div class="media-preview media-file-icon">
            <span class="file-icon">ðŸ“„</span>
          </div>
        <% end %>
        <div class="media-info">
          <p class="media-filename"><%= file.filename %></p>
          <p class="media-size"><%= number_to_human_size(file.byte_size) %></p>
          <div class="media-actions">
            <%= link_to "View", rails_blob_path(file, disposition: "inline"), target: "_blank", class: "btn btn-secondary" %>
            <%= form_with model: [@project, @task], url: project_task_path(@project, @task), method: :patch, local: true, class: "inline-form" do |form| %>
              <%= hidden_field_tag "task[remove_media_file_ids][]", file.id %>
              <%= form.submit "Remove", class: "btn btn-danger", data: { confirm: "Are you sure you want to remove this file?" } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No media files attached to this task.</p>
<% end %>

<div class="media-upload-section">
  <h3>Add Media Files</h3>
  <%= form_with model: [@project, @task], local: true, multipart: true do |form| %>
    <div>
      <%= form.label :media_files, "Select files to upload" %>
      <%= form.file_field :media_files, multiple: true, accept: "image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" %>
      <p class="help-text">Maximum 10 files, 10MB per file. Allowed: images, PDFs, Word, Excel</p>
    </div>

    <div>
      <%= form.submit "Upload Media", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="task-navigation">
  <%= link_to "View Task", project_task_path(@project, @task), class: "btn btn-secondary" %>
  <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
</div>

<% end %>

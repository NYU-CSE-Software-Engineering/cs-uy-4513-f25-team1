<div class="max-w-2xl mx-auto">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editing Task</h1>
    <%= link_to "Back to Tasks", project_tasks_path(@project), class: "btn btn-secondary" %>
  </div>

  <div class="card p-4" style="background: var(--bg-app); border: 1px solid var(--border-color); border-radius: var(--radius-md); padding: 24px;">
    <%= render "form", task: @task %>
  </div>

  <div class="mt-4">
    <%= link_to "Show this task", project_task_path(@project, @task), class: "text-muted" %>
  </div>
</div>

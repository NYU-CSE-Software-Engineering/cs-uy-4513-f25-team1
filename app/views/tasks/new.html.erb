<h1>New Task</h1>

<%= form_with model: @project, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Task::STATUS_OPTIONS %>
  </div>

  <div>
    <%= form.submit "Create Task" %>
  </div>
<% end %>


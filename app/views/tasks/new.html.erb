<div class="dashboard-layout">
  <%= render "application/sidebar" %>

  <div class="main-content">
    <div class="form-page-container">
      <div class="form-card">
        <div class="form-card-header">
          <div class="form-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 11l3 3L22 4"></path>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
            </svg>
          </div>
          <h1 class="form-title">Create New Task</h1>
          <p class="form-subtitle">Add a new task to <%= @project.name %></p>
        </div>

    <% if flash[:notice] %>
      <div class="form-success-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <div class="success-messages">
          <p><%= flash[:notice] %></p>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="form-error-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <div class="error-messages">
          <p><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <% if @task.errors.any? %>
      <div class="form-error-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <div class="error-messages">
          <% @task.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= form_with model: [@project, @task], local: true, multipart: true, class: "project-form" do |form| %>
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, required: true, class: "form-input", placeholder: "Enter task title" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 4, required: true, class: "form-input form-textarea", placeholder: "Describe the task..." %>
      </div>

      <div class="form-group">
        <%= form.label :type, class: "form-label" %>
        <%= form.select :type, options_for_select([
          ["Feature", "Feature"],
          ["Bug", "Bug"],
          ["Backlog", "Backlog"]
        ]), {}, { class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= form.label :branch_link, "Branch Link", class: "form-label" %>
        <span class="form-label-hint">(optional)</span>
        <div class="input-with-icon">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <%= form.url_field :branch_link, class: "form-input input-with-icon-field", placeholder: "https://github.com/org/repo/tree/branch-name" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :assignee_id, "Assignee", class: "form-label" %>
        <span class="form-label-hint">(optional)</span>
        <%= form.select :assignee_id,
          options_from_collection_for_select(@collaborators, :id, ->(c) { c.user.username }),
          { include_blank: "Unassigned" },
          { class: "form-input" } %>
        <span class="form-label-hint" style="display: block; margin-top: 0.5rem;">If assigned, task status will be set to "In Progress". Otherwise, it will be "To Do".</span>
      </div>

      <div class="form-group">
        <%= form.label :priority, class: "form-label" %>
        <span class="form-label-hint">(optional)</span>
        <%= form.select :priority, options_for_select([
          ["No Priority", "no_priority"],
          ["Low", "low"],
          ["Medium", "medium"],
          ["High", "high"],
          ["Urgent", "urgent"]
        ]), { include_blank: "Select Priority" }, { class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= form.label :due_at, "Due Date", class: "form-label" %>
        <span class="form-label-hint">(optional)</span>
        <%= form.datetime_local_field :due_at, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :media_files, "Media Files", class: "form-label" %>
        <span class="form-label-hint">(optional)</span>
        <div class="media-upload-zone" data-controller="file-upload">
          <div class="drop-zone-content" data-file-upload-target="dropZone" data-action="click->file-upload#openFilePicker">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>
            <p class="drop-zone-text">Drag files here or click to upload</p>
            <p class="drop-zone-hint">Maximum 10 files, 10MB per file. Allowed: images, PDFs, Word, Excel</p>
            <%= form.file_field :media_files, multiple: true, accept: "image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", class: "drop-zone-input", id: "new-task-media-input", data: { file_upload_target: "input", action: "change->file-upload#handleFileSelect" } %>
          </div>
          <div class="selected-files-container" data-file-upload-target="fileList" style="display: none;">
            <div class="selected-files-header">
              <span class="selected-files-title">Selected Files</span>
              <button type="button" class="clear-files-btn" data-action="click->file-upload#clearFiles">Clear All</button>
            </div>
            <ul class="selected-files-list" data-file-upload-target="fileListItems"></ul>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= form.submit "Create Task", class: "btn btn-primary btn-form-submit" %>
        <%= link_to "Cancel", project_path(@project), class: "btn btn-secondary" %>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>

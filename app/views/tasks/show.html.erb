<h1>Task Details</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<% if @task.completed_at.present? %>
  <div class="notice">This task was completed on <%= @task.completed_at.strftime("%B %d, %Y at %I:%M %p") %> and cannot be modified.</div>
<% end %>

<div class="task-details">
  <div class="task-info">
    <p><strong>Title:</strong> <%= @task.title %></p>
    <p><strong>Description:</strong> <%= @task.description %></p>
    <p><strong>Type:</strong> <%= @task.type.presence || "Not specified" %></p>
    <p><strong>Status:</strong> <%= @task.status.titleize %></p>
    <p><strong>Priority:</strong> <%= @task.priority&.titleize || "No Priority" %></p>
    <p><strong>Project:</strong> <%= @project.name %></p>
    <p><strong>Assignee:</strong> <%= @task.assignee&.user&.username || "Unassigned" %></p>
    <% if @task.branch_link.present? && safe_url(@task.branch_link) %>
      <p><strong>Branch Link:</strong> <%= link_to @task.branch_link, safe_url(@task.branch_link), target: "_blank", rel: "noopener noreferrer" %></p>
    <% end %>
    <% if @task.due_at.present? %>
      <p><strong>Due Date:</strong> <%= @task.due_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <% end %>
    <p><strong>Created:</strong> <%= @task.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Last Updated:</strong> <%= @task.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <% if @task.completed_at.present? %>
      <p><strong>Completed At:</strong> <%= @task.completed_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <% end %>
  </div>

  <div class="task-actions">
    <% unless @task.completed_at.present? %>
      <%= link_to "Edit Task", edit_project_task_path(@project, @task), class: "btn btn-secondary" %>
    <% end %>
    <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
  </div>
</div>

<hr>

<h2>Media Files</h2>

<% if @task.media_files.attached? %>
  <div class="media-gallery">
    <% @task.media_files.each do |file| %>
      <div class="media-item">
        <% if file.image? %>
          <div class="media-preview">
            <%= image_tag file, class: "media-thumbnail" %>
          </div>
        <% else %>
          <div class="media-preview media-file-icon">
            <span class="file-icon">ðŸ“„</span>
          </div>
        <% end %>
        <div class="media-info">
          <p class="media-filename"><%= file.filename %></p>
          <p class="media-size"><%= number_to_human_size(file.byte_size) %></p>
          <div class="media-actions">
            <%= link_to "View", rails_blob_path(file, disposition: "inline"), target: "_blank", class: "btn btn-secondary" %>
            <% unless @task.completed_at.present? %>
              <%= form_with model: [@project, @task], url: project_task_path(@project, @task), method: :patch, local: true, class: "inline-form" do |form| %>
                <%= hidden_field_tag "task[remove_media_file_ids][]", file.id %>
                <%= hidden_field_tag :redirect_to_show, "1" %>
                <%= form.submit "Remove", class: "btn btn-danger", data: { confirm: "Are you sure you want to remove this file?" } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No media files attached to this task.</p>
<% end %>

<% unless @task.completed_at.present? %>
  <div class="media-upload-section">
    <h3>Add Media Files</h3>
    <%= form_with model: [@project, @task], url: project_task_path(@project, @task), method: :patch, local: true, multipart: true do |form| %>
      <%= hidden_field_tag :redirect_to_show, "1" %>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited media from being saved:</h2>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :media_files, "Select files to upload" %>
        <%= form.file_field :media_files, multiple: true, accept: "image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" %>
        <p class="help-text">Maximum 10 files, 10MB per file. Allowed: images, PDFs, Word, Excel</p>
      </div>

      <div>
        <%= form.submit "Upload Media", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
<% end %>

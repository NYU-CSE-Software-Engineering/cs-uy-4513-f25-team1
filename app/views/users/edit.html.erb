<div class="dashboard-layout">
  <%= render "application/sidebar" %>

  <div class="main-content">
    <div class="form-page-container">
      <div class="form-card">
        <div class="form-card-header">
          <div class="form-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
          </div>
          <h1 class="form-title">Account Settings</h1>
          <p class="form-subtitle">Update your profile information and password</p>
        </div>

    <% if flash[:alert] %>
      <div class="form-error-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <div class="error-messages">
          <p><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="form-success-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <div class="success-messages">
          <p><%= flash[:notice] %></p>
        </div>
      </div>
    <% end %>

    <%= form_with model: @user, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email_address, "Email Address", class: "form-label" %>
        <%= f.text_field :email_address, class: "form-input", placeholder: "Enter your email address" %>
      </div>

      <div class="form-group">
        <%= f.label :username, "Username", class: "form-label" %>
        <%= f.text_field :username, class: "form-input", placeholder: "Enter your username" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "New Password", class: "form-label" %>
        <span class="form-label-hint">(leave blank to keep current)</span>
        <%= f.password_field :password, class: "form-input", placeholder: "Enter new password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input", placeholder: "Repeat new password" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Update Account", class: "btn btn-primary btn-form-submit" %>
        <%= link_to "Cancel", projects_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>

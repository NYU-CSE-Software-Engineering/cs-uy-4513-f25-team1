<h1>Sidebar</h1>
<% if @manager_projects.present? %>
    <%= content_tag :h2, "Manager Projects" %>
    <% @manager_projects.each do |p| %>
      <p> <%= link_to p.project.name, project_path(p.project_id) %> </p>
    <% end %>
<% end %>
<% if @developer_projects.present? %>
    <%= content_tag :h2, "Developer Projects" %>
    <% @developer_projects.each do |p| %>
      <p> <%= link_to p.project.name, project_path(p.project_id) %> </p>
    <% end %>
<% end %>
<% if @invited_projects.present? %>
    <%= content_tag :h2, "Invites" %>
    <% @invited_projects.each do |invite| %>
      <div class="invite-item">
        <span><%= invite.project.name %></span>
        <%= button_to "Accept", accept_collaborator_path(invite), method: :patch, class: "accept-btn" %>
        <%= button_to "Reject", reject_collaborator_path(invite), method: :patch, class: "reject-btn" %>
      </div>
    <% end %>
<% end %>
<%= link_to "User Settings", edit_user_path(session[:user_id]) %>
<%= render "application/logout" %>

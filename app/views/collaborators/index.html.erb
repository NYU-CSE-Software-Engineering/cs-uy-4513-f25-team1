<%= render "application/sidebar" %>

<h1>Collaborators for <%= @project.name %></h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= link_to "â† Back to Project", project_path(@project), class: "button" %>

<hr>

<div class="collaborators-list">
  <% @collaborators.group_by(&:role).each do |role, collaborators| %>
    <div class="role-section">
      <h2><%= role.titleize.pluralize %></h2>
      
      <% collaborators.each do |collaborator| %>
        <div class="collaborator-card">
          <div class="collaborator-info">
            <h3>
              <%= link_to collaborator.user.username, project_collaborator_path(@project, collaborator) %>
            </h3>
            <p><strong>Email:</strong> <%= collaborator.user.email_address %></p>
            <p><strong>Role:</strong> <%= collaborator.role.titleize %></p>
            
            <% unless collaborator.invited? %>
              <p><strong>Tasks:</strong> <%= collaborator.task_count %></p>
              <p><strong>Completed:</strong> <%= collaborator.completed_task_count %></p>
              <p><strong>Contribution:</strong> <%= collaborator.contribution_percentage %>%</p>
            <% end %>
          </div>
          
          <div class="collaborator-actions">
            <%= link_to "View Details", project_collaborator_path(@project, collaborator), class: "button" %>
            
            <% if @current_user_role == "manager" || collaborator.user_id == Current.session&.user_id %>
              <%= link_to "Edit", edit_project_collaborator_path(@project, collaborator), class: "button" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .collaborators-list {
    margin-top: 20px;
  }
  
  .role-section {
    margin-bottom: 30px;
  }
  
  .role-section h2 {
    border-bottom: 2px solid #333;
    padding-bottom: 10px;
  }
  
  .collaborator-card {
    border: 1px solid #ddd;
    padding: 15px;
    margin: 10px 0;
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .collaborator-info h3 {
    margin: 0 0 10px 0;
  }
  
  .collaborator-info p {
    margin: 5px 0;
  }
  
  .collaborator-actions {
    display: flex;
    gap: 10px;
    flex-direction: column;
  }
  
  .button {
    padding: 8px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    display: inline-block;
    text-align: center;
  }
  
  .button:hover {
    background-color: #0056b3;
  }
</style>

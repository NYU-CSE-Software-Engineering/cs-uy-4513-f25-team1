<div class="auth-container">
  <h1>Create a New Project</h1>
  
  <%= form_with model: @project, local: true do |form| %>
    <% if @project.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group">
      <%= form.label :name, "Project Name" %>
      <%= form.text_field :name, placeholder: "e.g. Website Redesign", required: true %>
    </div>

    <div class="input-group">
      <%= form.label :key, "Project Key" %>
      <%= form.text_field :key, placeholder: "e.g. CORE-A1B2", required: true %>
    </div>

    <div class="input-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, placeholder: "Briefly describe the project goals...", rows: 3 %>
    </div>

    <div class="actions">
      <%= form.submit "Create Project", class: "button primary" %>
    </div>
  <% end %>

  <div class="links">
      <%= link_to "Back to Dashboard", projects_path, class: "button secondary" %>
  </div>
</div>

<div class="dashboard-layout">
  <%= render "application/sidebar" %>

  <div class="main-content main-content-centered">
    <% if flash[:created] %>
      <div class="alert alert-success"><%= flash[:created] %></div>
    <% end %>

    <div class="welcome-card">
      <div class="welcome-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 3h7v7H3z"></path>
          <path d="M14 3h7v7h-7z"></path>
          <path d="M14 14h7v7h-7z"></path>
          <path d="M3 14h7v7H3z"></path>
        </svg>
      </div>

      <h1 class="welcome-title">Welcome to Quadratic</h1>
      <p class="welcome-subtitle">Get started by creating your first project to organize tasks and collaborate with your team.</p>

      <div class="feature-highlights">
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 11l3 3L22 4"></path>
            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
          </svg>
          <span>Organize tasks with boards</span>
        </div>
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
          <span>Collaborate with your team</span>
        </div>
        <div class="feature-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="20" x2="18" y2="10"></line>
            <line x1="12" y1="20" x2="12" y2="4"></line>
            <line x1="6" y1="20" x2="6" y2="14"></line>
          </svg>
          <span>Track progress in real-time</span>
        </div>
      </div>

      <%= link_to new_project_path, class: "create-project-btn" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Create Your First Project
      <% end %>
    </div>
  </div>
</div>

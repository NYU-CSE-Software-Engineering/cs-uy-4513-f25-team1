<%= form_with(model: project, class: "project-form") do |form| %>
  <% if project.errors.any? %>
    <div class="error-explanation mb-4 p-3" style="background-color: #fee2e2; color: var(--danger-color); border-radius: var(--radius-md);">
      <h2 style="font-size: 16px; margin-bottom: 8px;"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul style="padding-left: 20px; margin: 0;">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :key, class: "form-label" %>
    <%= form.text_field :key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :wip_limit, class: "form-label" %>
    <%= form.number_field :wip_limit, class: "form-control" %>
  </div>

  <div class="form-actions mt-4">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

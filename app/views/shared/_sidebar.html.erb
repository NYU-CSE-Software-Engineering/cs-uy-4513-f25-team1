<div class="sidebar">
  <div class="sidebar-header">
    <h3>My Projects</h3>
  </div>
  <ul class="project-list">
    <% Project.all.each do |project| %>
      <li>
        <%= link_to project.name, project_path(project), class: "project-link" %>
      </li>
    <% end %>
  </ul>
  <div class="sidebar-footer">
    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
    <!-- Placeholder for Join Project logic -->
    <button class="btn btn-secondary" disabled>Join Project</button>
  </div>
</div>

<style>
  .sidebar {
    box-sizing: border-box;
    width: 250px;
    background-color: #f5f5f5;
    height: 100vh;
    padding: 20px;
    position: fixed;
    left: 0;
    top: 0;
    border-right: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    z-index: 1000; /* Ensure it stays on top if needed, though layout fix is primary */
  }
  .project-list {
    list-style: none;
    padding: 0;
    flex-grow: 1;
  }
  .project-list li {
    margin-bottom: 10px;
  }
  .project-link {
    text-decoration: none;
    color: #333;
    font-weight: 500;
  }
  .project-link:hover {
    color: #000;
  }
  .sidebar-footer {
    margin-top: auto;
  }
  .btn {
    display: block;
    width: 100%;
    margin-bottom: 10px;
    text-align: center;
    padding: 8px;
    border-radius: 4px;
    text-decoration: none;
  }
  .btn-primary {
    background-color: #007bff;
    color: white;
  }
  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }
</style>

<div class="home-container">
  <div class="hero-section">
    <h1 class="app-title">Jira Lite</h1>
    <p class="app-subtitle">Streamline your workflow with our powerful project management tool.</p>
    <div class="cta-buttons">
      <a href="/session/new" class="btn btn-primary">Login</a>
      <a href="/features" class="btn btn-secondary">Features</a>
      <% if session[:user_id].present? %>
        <%= button_to "Log out",
              session_path,
              method: :delete,
              class: "btn btn-danger",
              form: { style: "display:inline;" } %>
      <% end %>
    </div>
  </div>
</div>
